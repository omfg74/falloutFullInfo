<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GreenTextFallout.20" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
        <item name="font">@font/fallout</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GreenTextFallout.Dark.20" parent="GreenTextFallout.20">
        <item name="android:textColor">@color/monitor_green_dark</item>
    </style>

    <style name="GreenTextFallout.Dark.16" parent="GreenTextFallout.Dark.20">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GreenTextFallout.Dark.12" parent="GreenTextFallout.Dark.20">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GreenDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/monitor_green_dark</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.FalloutFullInfo">
        <item name="android:foreground">@color/monitor_green_background_dark_5_percent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@color/monitor_green_dark</item>
    </style>
</resources>