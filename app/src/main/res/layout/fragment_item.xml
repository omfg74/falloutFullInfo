<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.omfgdevelop.falloutfullinfo.presentation.viewModel.ItemFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/monitor_green_background_dark_5_percent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_skill_image"
            android:layout_width="196dp"
            android:layout_height="184dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:foreground="@drawable/rounded_corner_image_foreground"
            android:scaleType="fitXY"
            android:src="@{viewModel.imageResource}"
            tools:src="@drawable/strength"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:text="@{viewModel.title}"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/GreenTextFallout.Dark.20"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_skill_image"
            tools:text="Strength | Сила" />

        <TextView
            android:text="@{viewModel.description}"
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:textAppearance="@style/GreenTextFallout.Dark.16"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="24dp"
            app:layout_goneMarginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="Главная функция силы в игре - максимальный вес инвентаря и использование различных видов вооружения. Силы в 6-7 хватит для использования всех видов оружия. Если уменьшить силу меньше 5, то возникнут большие проблемы с ношением необходимых предметов в инвентаре. Кроме этого в игре встречаются двери, которые можно открыть только имея силу больше 8." />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
